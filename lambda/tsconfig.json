{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",            // Compile output directory
    "inlineSourceMap": true
  },
  "include": ["src/**/*"],          // Only compile files in `src`
  "exclude": ["node_modules", "dist"]
}
